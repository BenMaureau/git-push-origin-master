<h1> <%= @list.name %> </h1>

<div class = "bookmarks">
  <% @list.bookmarks.each do |bookmark| %>
  <%= bookmark.movie.title %>
  <%= bookmark.comment %>
  <%= link_to "Remove", bookmark_path(bookmark), method: :delete, style: 'color:red;', data: { confirm: "Are you sure?" } %>
  <% end %>
</div>


<h1> New Bookmark </h1>

  <%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie %>
  <%= f.submit 'Create bookmark', :class => 'btn btn-success' %>
  <% end %>

<div> <%= link_to "Back to list", lists_path, class: 'btn btn-primary' %> </div>
